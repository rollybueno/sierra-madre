{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Site Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Site Footer"
		},
		{
			"area": "uncategorized",
			"name": "three-query",
			"title": "Three Query"
		},
		{
			"area": "uncategorized",
			"name": "query",
			"title": "Query"
		}
	],
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "bg",
					"color": "#FFFFFF",
					"name": "Base Background"
				},
				{
					"slug": "text",
					"color": "#333333",
					"name": "Primary Text"
				},
				{
					"slug": "forest",
					"color": "#556B58",
					"name": "Forest Green"
				},
				{
					"slug": "tealgray",
					"color": "#7FA2A9",
					"name": "Teal Gray"
				},
				{
					"slug": "cta",
					"color": "#FFD230",
					"name": "CTA Yellow"
				},
				{
					"slug": "cta-text",
					"color": "#333333",
					"name": "CTA Text"
				},
				{
					"slug": "link",
					"color": "#006F8E",
					"name": "Tahoe Blue Link"
				},
				{
					"slug": "footer-dark",
					"color": "#1A1A1A",
					"name": "Charcoal Footer"
				},
				{
					"slug": "footer-deep",
					"color": "#2E4A4D",
					"name": "Deep Navy Teal Footer"
				},
				{
					"slug": "footer-mocha",
					"color": "#4B3B2A",
					"name": "Dark Mocha Footer"
				},
				{
					"slug": "bg-alt3",
					"color": "#E1E5D5",
					"name": "Sage"
				},
				{
					"slug": "bg-alt4",
					"color": "#F5E6D3",
					"name": "Warm Sand"
				},
				{
					"slug": "bg-alt5",
					"color": "#DDE6EA",
					"name": "Misty Blue"
				},
				{
					"slug": "secondary",
					"color": "#7FA2A9",
					"name": "Secondary Button"
				},
				{
					"slug": "primary-hover",
					"color": "#E6BD1A",
					"name": "Primary Hover"
				},
				{
					"slug": "secondary-hover",
					"color": "#6B8A90",
					"name": "Secondary Hover"
				}
			]
		},
		"spacing": {
			"units": [
				"px",
				"em",
				"rem",
				"%",
				"vw",
				"vh"
			],
			"spacingScale": {
				"steps": 7,
				"operator": "+",
				"increment": 0.25,
				"mediumStep": 1.5
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Righteous",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/righteous/righteous-400-normal.woff2"
							]
						}
					],
					"fontFamily": "Righteous",
					"name": "Righteous",
					"slug": "righteous"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "100",
							"src": [
								"file:./assets/fonts/roboto/roboto-100-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/roboto/roboto-300-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/roboto/roboto-400-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": [
								"file:./assets/fonts/roboto/roboto-500-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/roboto/roboto-700-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/roboto/roboto-900-normal.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "100",
							"src": [
								"file:./assets/fonts/roboto/roboto-100-italic.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/roboto/roboto-300-italic.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/roboto/roboto-400-italic.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "500",
							"src": [
								"file:./assets/fonts/roboto/roboto-500-italic.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/roboto/roboto-700-italic.woff2"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/roboto/roboto-900-italic.woff2"
							]
						}
					],
					"fontFamily": "Roboto, sans-serif",
					"name": "Roboto",
					"slug": "roboto"
				}
			],
			"fontSizes": [
				{
					"size": "1.125rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"size": "1.25rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"size": "1.5rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"size": "1.75rem",
					"slug": "x-large",
					"name": "Extra Large"
				},
				{
					"size": "2.25rem",
					"slug": "xx-large",
					"name": "2X Large"
				},
				{
					"size": "clamp(3rem, 6vw, 7rem)",
					"slug": "hero",
					"name": "Hero"
				},
				{
					"size": "clamp(2rem, 4vw, 3rem)",
					"slug": "display",
					"name": "Display"
				}
			]
		},
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true
		},
		"layout": {
			"contentSize": "1100px",
			"wideSize": "1400px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--bg)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--roboto)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--medium)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--link)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--cta)"
					}
				}
			},
			"h1": {
				"typography": {					
					"fontFamily": "var(--wp--preset--font-family--righteous)"					
				}
			}
		},
		"blocks": {
			"core/cover": {
				"css": "padding-block-start: 0; padding-block-end: 0; margin-bottom: clamp(1.75rem, 5vw, 3rem); & .wp-block-cover__inner-container p { font-size: var(--wp--preset--font-size--large); color: #FFF !important; }",
				"elements": {
					"h1": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--hero)",
							"textTransform": "uppercase"
						},
						"css": "color: #FFF !important; text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5); margin-block-start: 0.47em; margin-block-end: 0.47em;"
					},
					"button": {
						"spacing": {
							"margin": {
								"top": "clamp(1.75rem, 2vw, 3rem)"
							}
						}
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--cta)",
					"text": "var(--wp--preset--color--cta-text)"
				},
				"typography": {
					"fontWeight": "600"
				},
				"border": {
					"color": "var(--wp--preset--color--cta)",
					"style": "solid",
					"radius": "5px"
				},
				"shadow": "0 4px 6px rgba(0, 0, 0, 0.25);"
			},
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				},
				"typography": {
					"fontWeight": "600",
					"lineHeight": "1.2"
				}
			},
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				},
				"typography": {
					"lineHeight": "1.6"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "clamp(1.75rem, 5vw, 3rem)",
						"bottom": "clamp(1.75rem, 5vw, 3rem)",
						"left": "28px",
						"right": "28px"
					}
				},
				"border": {
					"radius": "14px"
				}
			}
		}
	}
}